.basement_settings_page
	background #fff
	overflow hidden
	position relative
	input
		&[type="text"]
			width 100%
	textarea
		max-width 100%
		min-width 100%  
		width 100% 
	.basement_form_input_wrapper 
		margin-bottom 10px 
		&:last-child
			margin-bottom 0 
	
.basement_settings_content
	position relative
	
.basement_settings_page_header
	border-bottom 1px solid #eee 
// Menu
.basement_settings_panel_menu
	left 0
	position absolute
	top 0
	width 200px
	z-index 1 
	a
		color #fff 
		display block
		padding 10px 15px
		text-decoration none
		&.active
			background-color #fff
		&:focus
			outline none
			box-shadow 0 0

// Modules content
.basement_settings_panel_section
	.basement_form_checkboxes 
		margin-bottom 20px 
		label
			display block
	.basement_editor_wrapper
		clear none
	.wp-editor-container
		clear none
	.wp-editor-tools
		overflow hidden
		margin-bottom -1px 

.basement_settings_panel_sections
	border-left 200px solid #222
	overflow hidden
	padding 20px 
	& > div
		display none
		&.active
			display block
			
.basement_settings_panel_sections_menu_free
	border-left none 

.basement_settings_panel_section_title
	font-size 20px
	font-weight 700
	margin-bottom 15px
	
.basement_section_hidden
	display none
	
.basement_color_picker_pad
	background url(../images/jscolor_hv.png) repeat
	
#basement_post_parameters_panel
	margin -6px -12px -12px 
	.wrap
		margin 0
				
.basement_settings_panel_block
	border-bottom 1px solid #dedede 
	overflow hidden
	margin-bottom 20px
	padding-bottom 20px 
	&:first-child 
		padding-top 20px 
	&:last-child 
		border none 
		margin-bottom 0 
		padding-bottom 0 

.basement_settings_panel_block_description
	float left
	max-width 200px
	
.basement_settings_panel_block_description_title
	font-size 16px
	font-weight bold
	margin-bottom 10px 
	
.basement_settings_panel_block_description_text
	font-style italic
	font-size 12px
	color #777
	
.basement_settings_panel_block_inputs
	margin-left 240px 



